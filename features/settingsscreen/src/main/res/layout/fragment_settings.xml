<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_1"
    tools:context=".presenter.SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:background="@drawable/set"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/restart"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:src="@drawable/restart"
            app:layout_constraintBottom_toTopOf="@+id/back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/sound"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:src="@drawable/sound"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.308" />

        <ImageView
            android:id="@+id/music"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/music"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/sound"
            app:layout_constraintTop_toBottomOf="@+id/sound"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/volume1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="28dp"
            android:src="@drawable/volon"
            app:layout_constraintBottom_toBottomOf="@+id/sound"
            app:layout_constraintStart_toEndOf="@+id/sound"
            app:layout_constraintTop_toTopOf="@+id/sound"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/volume2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="28dp"
            android:src="@drawable/volon"
            app:layout_constraintBottom_toBottomOf="@+id/music"
            app:layout_constraintStart_toEndOf="@+id/sound"
            app:layout_constraintTop_toTopOf="@+id/music"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginBottom="44dp"
            android:src="@drawable/back1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>